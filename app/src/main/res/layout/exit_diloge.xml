<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="fill_parent"
    android:layout_height="400dp"
    android:background="#ffffffff"
    android:orientation="vertical"
    android:weightSum="6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.5">

        <RelativeLayout
            android:id="@+id/layout_top"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_sponse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="7.0dip"
                android:text="Sponsored ad"
                android:textColor="#ff333333"
                android:textSize="11.0dip" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <LinearLayout
                    android:id="@+id/Ladview"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="bottom"
        android:layout_weight="1.5"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_marginTop="30dp"
            android:id="@+id/layou.t_title"
            android:layout_width="fill_parent"
            android:layout_height="60.0dip"
            android:background="#36AC72">

            <TextView
                android:id="@+id/save_title"
                android:layout_width="fill_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10.0dip"
                android:text="Do you want to exit?"
                android:textColor="#ffffffff"
                android:textSize="20.0dip"
                />
        </RelativeLayout>
        <ImageView
            android:id="@+id/line"
            android:layout_width="fill_parent"
            android:layout_height="0.70000005dip"
            android:background="#ff162749" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="#36AC72"
            android:weightSum="3">

            <LinearLayout
                android:id="@+id/layout_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_centerInParent="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/cancelimage"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="35dp"
                    android:text="Yes"
                    android:layout_marginTop="3dp"
                    android:textColor="#ffffff"
                    android:textSize="18.0dip" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutrateus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerInParent="true"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/rateusimage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Rate Us"
                    android:layout_marginTop="3dp"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="40dp"
                    android:textSize="18.0dip" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerInParent="true"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/quitimage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No"
                    android:layout_marginTop="3dp"
                    android:textColor="#ffffff"
                    android:textSize="18.0dip"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="15dp"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="0.70000005dip"
                android:layout_height="fill_parent"
                android:background="#ff162749" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>